<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_black"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".AlarmFragment">

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/amPmSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timePicker"
        android:background="@drawable/round_background"
        android:layout_marginStart="300dp"
        android:layout_marginTop="-366dp"
        android:minHeight="48dp"
        android:textSize="18sp"
        android:hint="Select AM or PM"
        tools:ignore="VisualLintBounds" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alarm_state"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:text="Start"
        android:id="@+id/alarm_on"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alarm_state"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:text="Stop"
        android:id="@+id/alarm_off"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:textSize="25sp"
        android:text="Did you set the alarm?"
        android:textColor="@color/white"
        android:id="@+id/alarm_state"
        android:layout_below="@+id/timePicker"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_spinner_background"
        android:minHeight="48dp"
        android:textSize="18sp"
        android:hint="Select an option" />
</RelativeLayout>
